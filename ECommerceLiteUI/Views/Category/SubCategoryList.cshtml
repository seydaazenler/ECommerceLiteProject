
@using ECommerceLiteEntity.Models
@model List<Category>
@{
    ViewBag.Title = "SubCategoryList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h4>@ViewBag.CategoryName Kategorisinin Alt Kategorileri</h4>
<hr />
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <a href="/Category/Create/@ViewBag.CategoryId" class="btn btn-success" 
               style=" margin-right:5px;">Alt Kategori Ekle</a>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Alt Kategori Adı</th>
                        <th>Açıklama</th>
                        <th>İşlemler</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryName</td>
                            <td>@item.CategoryDescription</td>
                            <td>
                                <a href="/Category/Edit/@item.Id" class="btn btn-sm btn-warning" style=" margin-right:5px;">Düzenle</a>
                                <a href="/Category/Delete/@item.Id" class="btn btn-sm btn-danger" style=" margin-right:5px;">Sil</a>

                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


