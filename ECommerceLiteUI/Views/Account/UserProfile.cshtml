@using ECommerceLiteUI.Models
@model ProfileViewModel
@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="row margin-vert-30">
    <div class="col-md-12- col-md-offset-3 col-sm-offset-3">
        <span class="text-danger">@Html.ValidationSummary()</span>

        @using (Html.BeginForm("Profil", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            if (ViewBag.TheResult != null)
            {
                <!-- Default Blockquote -->
                <blockquote>
                    <p>
                        <h4 class="col-md-12"><em>@ViewBag.TheResult</em></h4> <br />
                    </p>
                </blockquote>
                <!-- End Default Blockquote -->
            }
            else
            {
                <h4 class="col-md-12">Bilgileri güncelleyip, devam edebilirsiniz..</h4> <br /> <br />
            }
            
            <div class="form-group col-md-6 col-md-offset-3">
                @Html.Label("Email Adresiniz")
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" }) <br />
            </div>
            <div class="form-group col-md-6 col-md-offset-3">
                @Html.Label("Adınız")
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" }) <br />
            </div>
            <div class="form-group col-md-6 col-md-offset-3">
                @Html.Label("Soyadınız")
                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" }) <br />
            </div>
            <div class="col-md-12">
                <button type="submit" value="Guncelle" class="btn btn-lg btn-success"><b>Güncelle</b></button>
            </div>
        }

    </div>
</div>


