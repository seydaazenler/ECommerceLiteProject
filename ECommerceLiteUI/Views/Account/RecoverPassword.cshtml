@using ECommerceLiteUI.Models
@model ProfileViewModel
@{
    ViewBag.Title = "RecoverPassword";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="row margin-vert-30">
    <div class="col-md-12 col-md-offset-3 col-sm-offset-3">
        @using (Html.BeginForm("RecoverPassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            if (ViewBag.TheResult != null)
            {
                <div class="login-header margin-bottom-30 col-md-6">
                    <h4>@ViewBag.TheResult</h4>
                </div><br />

            }
            else
            {
                <div class="row">
                    <div class="login-header margin-bottom-30 col-md-6">
                        <h2 class="text-center">Yeni Şifre Talebi</h2>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="input-group col-md-6 margin-bottom-20">
                        <span class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </span>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Mail adresinizi yazınız.." })
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                    <br />
                    <button type="submit" id="btnsubmit" 
                            class="btn btn-success" 
                           >Gönder</button>
                </div>

            }
        }
    </div>
</div>
 
