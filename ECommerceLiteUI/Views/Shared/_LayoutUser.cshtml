@using ECommerceLiteBLL.Account
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>ECommerceLite Project</title>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link href="~/Electro-Theme/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="~/Electro-Theme/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/Electro-Theme/css/slick-theme.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="~/Electro-Theme/css/nouislider.min.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="~/Electro-Theme/css/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/Electro-Theme/css/style.css" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <!-- HEADER -->
    <header>
        <!-- TOP HEADER -->
        <div id="top-header">
            <div class="container">
                <ul class="header-links pull-left">
                    <li><a href="#"><i class="fa fa-mobile-phone"></i> +9 0507 320 0699</a></li>
                    <li><a href="#"><i class="fa fa-envelope-o"></i> seydaazenler@gmail.com</a></li>
                    <li><a href="#"><i class="fa fa-map-marker"></i> istanbul, TÜRKİYE </a></li>
                </ul>
                <ul class="header-links pull-right">
                    @{ 
                        Html.RenderAction("UserNameSurnameOnHomePage", "Partials");
                    }



                    @if (MembershipTools.GetUser() != null)
                    {

                        <li><a href="/Account/Logout"><i class="fa fa-sign-out"></i>Çıkış Yap</a></li>

                    }
                    else
                    {
                        <li><a href="/Account/Login"><i class="fa fa-sign-out"></i>Giriş Yap</a></li>
                    }
                </ul>
            </div>
        </div>
        <!-- /TOP HEADER -->
        <!-- MAIN HEADER -->
        <div id="header">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <!-- LOGO -->
                    <div class="col-md-3">
                        <div class="header-logo">
                            <a href="/Home/Index" class="logo">
                                <img src="~/Electro-Theme/img/103logo.png" alt="">
                                
                            </a>
                        </div>
                    </div>
                    <!-- /LOGO -->
                    <!-- SEARCH BAR -->
                    <div class="col-md-6">
                        <div class="header-search">
                            <form>
                                <select class="input-select">
                                    <option value="0">Tümü</option>
                                    <option value="1">Yeni Gelenler</option>
                                    <option value="1">Çok Satanlar</option>
                                </select>
                                <input class="input" placeholder="Ara..">
                                <button class="search-btn">Ara</button>
                            </form>
                        </div>
                    </div>
                    <!-- /SEARCH BAR -->
                    <!-- ACCOUNT -->
                    <div class="col-md-3 clearfix">
                        <div class="header-ctn">
                            <!-- Wishlist -->
                            <div>
                                <a href="#">
                                    <i class="fa fa-heart-o"></i>
                                    <span>Favorilerim</span>
                                    <div class="qty">2</div>
                                </a>
                            </div>
                            <!-- /Wishlist -->
                            <!-- Cart -->
                           @{
                               Html.RenderAction("ShoppingCart", "Partials");
                            }
                            <!-- /Cart -->
                            <!-- Menu Toogle -->
                            <div class="menu-toggle">
                                <a href="#">
                                    <i class="fa fa-bars"></i>
                                    <span>Menü</span>
                                </a>
                            </div>
                            <!-- /Menu Toogle -->
                        </div>
                    </div>
                    <!-- /ACCOUNT -->
                </div>
                <!-- row -->
            </div>
            <!-- container -->
        </div>
        <!-- /MAIN HEADER -->
    </header>
    <!-- /HEADER -->
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                @RenderBody()
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
    <!-- FOOTER -->
    <footer id="footer">
        <!-- top footer -->
        <div class="section">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">Hakkımızda</h3>
                            <p>Güvenli Alışveriş, Uygun Fiyatlı ihtiyacınız olan tüm elektronik ürünler Electro'da!</p>
                            <ul class="footer-links">
                                <li><a href="#"><i class="fa fa-map-marker"></i>istanbul,TÜRKİYE</a></li>
                                <li><a href="#"><i class="fa fa-phone"></i>+90 507 320 0699</a></li>
                                <li><a href="#"><i class="fa fa-envelope-o"></i>seydaazenler@gmail.com</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">Kategoriler</h3>
                            <ul class="footer-links">
                                <li><a href="#">Elektronik</a></li>
                                <li><a href="#">Küçük Ev Aletleri</a></li>
                                <li><a href="#">Oyun-Hobi</a></li>
                                <li><a href="#">Bilgisayar-Laptop</a></li>
                                
                            </ul>
                        </div>
                    </div>

                    <div class="clearfix visible-xs"></div>

                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">Kurumsal</h3>
                            <ul class="footer-links">
                                <li><a href="#">Hakkımızda</a></li>
                                <li><a href="#">İletişim</a></li>
                                <li><a href="#">Gizlilik Politikası</a></li>
                                <li><a href="#">KVKK</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">HESABIM</h3>
                            <ul class="footer-links">
                                <li><a href="#">Hesabım</a></li>
                                <li><a href="#">Sepetim</a></li>
                                <li><a href="#">Favorilerim</a></li>
                                <li><a href="#">Siparişlerim</a></li>
                                <li><a href="#">Destek</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /top footer -->
        <!-- bottom footer -->
        <div id="bottom-footer" class="section">
            <div class="container">
                <!-- row -->
                <div class="row">
                    <div class="col-md-12 text-center">
                        <ul class="footer-payments">
                            <li><a href="#"><i class="fa fa-cc-visa"></i></a></li>
                            <li><a href="#"><i class="fa fa-credit-card"></i></a></li>
                            <li><a href="#"><i class="fa fa-cc-paypal"></i></a></li>
                            <li><a href="#"><i class="fa fa-cc-mastercard"></i></a></li>
                            <li><a href="#"><i class="fa fa-cc-discover"></i></a></li>
                            <li><a href="#"><i class="fa fa-cc-amex"></i></a></li>
                        </ul>
                        <span class="copyright">
                            <a target="_blank" href="https://www.templateshub.net">2022 Network Academy</a>
                        </span>


                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /bottom footer -->
    </footer>
    <!-- /FOOTER -->
    <!-- jQuery Plugins -->
    <script src="~/Electro-Theme/js/jquery.min.js"></script>
    <script src="~/Electro-Theme/js/bootstrap.min.js"></script>
    <script src="~/Electro-Theme/js/slick.min.js"></script>
    <script src="~/Electro-Theme/js/nouislider.min.js"></script>
    <script src="~/Electro-Theme/js/jquery.zoom.min.js"></script>
    <script src="~/Electro-Theme/js/main.js"></script>


</body>
@RenderSection("scripts", required: false)
</html>

